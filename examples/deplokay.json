{
  "$schema": "../config-schema.json",
  "id": "deplokay/main",
  "mode": "npm",
  "source": {
    "local": {
      "path": "."
    },
    "remote": {
      "branch": "main",
      "repository": "https://github.com/ffalt/deplokay.git",
      "checkout_path": "./data/deplokay/build"
    }
  },
  "build": {
    "npm": {
      "cmd_name": "build:deploy",
      "slim_package": true,
      "component_names": [
        "dist",
        "bin",
        "src",
        "LICENSE",
        "package.json",
        "config-schema.json",
        "README.md"
      ]
    }
  },
  "publish": {
    "folder": {
      "path": "./data/deplokay/current"
    },
    "archive": {
      "path": "./data/deplokay/archives"
    },
    "branch": {
      "branch": "releases"
    }
  }
}
